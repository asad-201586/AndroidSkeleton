<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/banner_backgorund"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp">

            <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_marginStart="@dimen/_16sdp"
            android:textColor="#242424"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_message"
        android:layout_marginTop="@dimen/_16sdp"
        android:textStyle="bold"
        android:textColor="#393939"
        android:textSize="@dimen/_12ssp"
        android:text="Latest version is available. Click on OK to update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_remind_me_later"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:text="Remind me later"
            android:textAllCaps="true"
            android:textColor="#31727e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_ok"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:text="Ok"
            android:textAllCaps="true"
            android:textColor="#31727e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>